.navbar.navbar-fixed-top
  .navbar-inner
    .container
    
      %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
      %a.brand{:href => "/"} LeadU
      .nav-collapse.collapse
      = link_to image_tag( 'facebook.png', :width=> '35', :align=>'right'), 'http://www.facebook.com'
      = link_to image_tag( 'twitter.png', :width=> '35', :align=>'right'), 'http://www.twitter.com'
      = link_to image_tag( 'linkedin.png', :width=> '35', :align=>'right'), 'http://www.linkedin.com'
      %ul.nav
        %li
          %a{:href => "/"} Home
          - if signed_in?
            %li
              %a{:href => "logout"} Logout
          - else  
            %li
              %a{:href => "./login"} Login
            %li
              %a{:href => "./signup"} Sign Up